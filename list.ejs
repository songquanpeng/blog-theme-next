<%- include('./partials/header') %>
<div class="index posts-expand">
    <article itemscope="" itemtype="http://schema.org/Article" class="post-block" lang="en" style="opacity: 1; display: block;">
        <div class="post-body" itemprop="articleBody" style="opacity: 1; display: block; transform: translateY(0px);">
            <table class="table is-fullwidth is-hoverable is-bordered is-striped">
                <thead>
                <tr>
                    <th>Title</th>
                    <th>Post Time</th>
                </tr>
                </thead>
                <tbody>
                <% pages.sort((a,b) => (a.post_time > b.post_time) ? 1 : ((b.post_time > a.post_time) ? -1 : 0)).forEach(page => { %>
                    <tr>
                        <td>
                            <a href="/page/<%= page.link %>">
                                <%= page.title %>
                            </a>
                        </td>
                        <td>
                            <time>
                                <%= page.post_time.substring(0, 10) %>
                            </time>
                        </td>
                    </tr>
                <% }) %>
                </tbody>
            </table>
        </div>
    </article>
</div>
<%- include('./partials/footer') %>
